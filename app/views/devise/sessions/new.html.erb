<div class="form-container-centered">
    <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post }, class: "log-in-form u-full-width") do |f| %>
        <div class="row">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: "u-full-width" %>
        </div>

        <div class="row">
            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "off", class: "u-full-width" %>
        </div>

        <div class="row">
            <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "checkbox-label" %>
            <% end -%>
        </div>

        <%= f.submit "Log in" %>

      <% end %>

    <%= render "devise/shared/links" %>
</div>

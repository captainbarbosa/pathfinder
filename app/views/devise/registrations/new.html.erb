<div class="form-container-centered">
    <h2>Sign up</h2>

    <div class="row">
        <%= render "devise/shared/links" %>
    </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post }, class: "log-in-form u-full-width") do |f| %>
      <%= devise_error_messages! %>

      <div class="row">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "u-full-width" %>
      </div>

      <div class="row">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>
              characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: "u-full-width" %>
      </div>

      <div class="row">
          <%= f.label :password_confirmation %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "u-full-width" %>
      </div>

      <div class="actions">
          <%= f.submit "Sign up" %>
      </div>

      <% end %>
</div>

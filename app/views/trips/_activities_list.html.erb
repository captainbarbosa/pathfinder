<% @trip.activities.each do |activity| %>
  <%= activity.name %>
  <%= link_to "Edit", edit_trip_activity_path(activity.trip_id, activity) %>
  <%= link_to "Delete", trip_activity_path(activity.trip_id, activity), method: :delete  %>
  <br>
<% end %>
<%= link_to "Add Activity", new_trip_activity_path(@trip.id), class: "button button-primary" %>

<div id="map">
  <a href="/trips/<%= @trip.id %>/activities/new"><i class="add-activity-icon fa fa-plus-circle fa-4x" aria-hidden="true"></i></a>
</div>

<hr></hr>

<h2 class="activities-index-header">Itinerary Details</h2>

<div class="activity-index-container">
  <% @trip.activities.each do |activity| %>
    <div class="activity-container">
      <h3 class="activity-title"><%= activity.name %></h3> <h3 class="activity-date"> â€¢ <%= activity.date.strftime("%x") %></h3>

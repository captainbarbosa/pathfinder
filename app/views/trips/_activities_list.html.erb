<div class="centered-content" id="trip-name-container">
  <h2 id="trip-name">
    <%= @trip.name %>
  </h2>
  <p id="trip-date"><%= date_range(@trip)[:start_date].strftime("%x") %> - <%= date_range(@trip)[:end_date].strftime("%x") %></p>
</div>

<div id="map">
  <a href="/trips/<%= @trip.id %>/activities/new"><i class="add-activity-icon fa fa-plus-circle fa-4x" aria-hidden="true"></i></a>
</div>

<hr></hr>

<h2 class="activities-index-header">Itinerary Details</h2>

<div class="activity-index-container">
  <% @trip.activities.each do |activity| %>
    <a name="<%= activity.name %>">
      <div class="activity-container">
        <h3 class="activity-title"><%= activity.name %></h3> <h3 class="activity-date"> â€¢ <%= activity.date.strftime("%x") %></h3>
        <p class="activity-description"><%= activity.description %></p>
        <%= link_to fa_icon(:pencil), edit_trip_activity_path(activity.trip_id, activity) %> <%= link_to fa_icon(:times), trip_activity_path(activity.trip_id, activity), method: :delete %>
      </div>
    </a>
  <% end %>
</div>

<script type="text/javascript">
  var activities = <%= raw activities_geojson(@trip) %>;
</script>

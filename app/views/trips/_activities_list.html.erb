      <%= link_to fa_icon(:pencil), edit_trip_activity_path(activity.trip_id, activity) %> <%= link_to fa_icon(:times), trip_activity_path(activity.trip_id, activity), method: :delete %>
    </div>
  <% end %>
</div>


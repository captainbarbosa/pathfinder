<%= form_for [@activity.trip, @activity] do |f| %>
  <%= f.hidden_field :trip_id %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :date %>
  <%= f.text_field :date, id: "datepicker" %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.submit %>
 <% end %>

 <script>
    var picker = new Pikaday({ field: document.getElementById('datepicker') });
</script>

<%= form_for [@activity.trip, @activity] do |f| %>
  <%= f.hidden_field :trip_id %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :date %>
  <%= f.datetime_field :date %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.submit %>
 <% end %>

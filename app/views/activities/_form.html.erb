<%= form_for [@activity.trip, @activity] do |f| %>
  <%= f.hidden_field :trip_id %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :date %>
  <%= f.text_field :date, class: "datepicker" %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.submit %>
 <% end %>
